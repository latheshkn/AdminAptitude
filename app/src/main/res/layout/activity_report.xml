        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">

    <LinearLayout
